root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 120
tab_width = unset

[*.json]
tab_width = 4
indent_size = 4

[*.{yaml,yml,sql}]
tab_width = 2
indent_size = 2

ij_continuation_indent_size = 4
